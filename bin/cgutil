import sys

commands = ['configs', 'stats', 'top', 'tree']

def usage():
    str = ''
    str += 'Usage: cgutil <cmd> [args]\n'
    str += '\t<cmd> := %s' % '|'.join(commands)
    return str

if len(sys.argv) <= 1:
    print(usage())
    sys.exit(1)

cmd = sys.argv[1]

if cmd not in commands:
    print(usage())
    sys.exit(1)

modname = 'cmd_' + cmd
modcgutils = __import__('cgutils', fromlist=[modname,])
mod = getattr(modcgutils, modname)

parser = mod.parser
options, args = parser.parse_args()

if args[1:]:
    parser.error('Unexpected arguments: ' + ' '.join(args))

if options.debug:
    print options

mod.run(options)

